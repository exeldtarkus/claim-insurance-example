# .editorconfig file for Next.js project

# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs.
# https://editorconfig.org/

# Root of the file, to avoid checking for .editorconfig higher in the folder hierarchy
root = true

# Default settings for all files
[*]
# Use 2 spaces for indentation
indent_style = space
indent_size = 2
# Set line endings to LF (Unix style)
end_of_line = lf
# Ensure files are trimmed of trailing whitespace
trim_trailing_whitespace = true
# Ensure files have a newline at the end
insert_final_newline = true

# JavaScript, TypeScript, and Next.js config files
[*.{js,ts,jsx,tsx,json}]
# Set indent style for JavaScript files
indent_style = space
indent_size = 2
# Use LF line endings
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# CSS/SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# HTML files
[*.html]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# JSON files (ensure no extra spaces)
[*.json]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Next.js configuration files (like next.config.js)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

